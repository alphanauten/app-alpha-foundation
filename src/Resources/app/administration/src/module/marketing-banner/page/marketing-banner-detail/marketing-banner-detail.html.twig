                </sw-card>

                <sw-card position-identifier="marketing-banner-detail-type" v-if="banner" :large="false" :hero="false"
                         :title="$tc('marketing-banner.detail.bannerTypeLabel')">
                    <sw-single-select v-model:value="banner.bannerType"
                                      :label="$tc('marketing-banner.detail.bannerTypeLabel')"
