    <sw-page class="alpha-marketing-banner-detail">
        <template #smart-bar-actions>
            <sw-button-group>
                <sw-button variant="ghost" @click="onCancel">
                    {{ $tc('marketing-banner.detail.cancelButtonText') }}
                </sw-button>
                <sw-button
                        :is-loading="isLoading"
                        v-if="banner"
