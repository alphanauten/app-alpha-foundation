{% block alpha_marketing_banner_list %}
    <sw-page class="alpha-marketing-banner-list">
        {% block alpha_marketing_banner_list_smart_bar_actions %}
            <template #smart-bar-actions>
                <sw-button variant="primary" :router-link="{ name: 'marketing.banner.create' }">
                    {{ $tc('marketing-banner.list.addButtonText') }}
                </sw-button>
            </template>
        {% endblock %}

        <template #content>
            {% block alpha_marketing_banner_list_content %}
                <sw-entity-listing
                        v-if="banners"
                        :items="banners"
                        :repository="repository"
                        :show-selection="false"
                        :allow-inline-edit="false"
                        :columns="columns"
                        detail-route="marketing.banner.detail">
                    {% block alpha_marketing_banner_list_grid_columns_valid_from %}
                        <template #column-validFrom="{ item }">
                            {{ dateFilter(item.validFrom, { hour: undefined, minute: undefined }) }}
                        </template>
                    {% endblock %}

                    {% block alpha_marketing_banner_list_list_grid_columns_valid_until %}
                        <template #column-validUntil="{ item }">
                            {{ dateFilter(item.validUntil, { hour: undefined, minute: undefined }) }}
                        </template>
                    {% endblock %}
                </sw-entity-listing>
            {% endblock %}
        </template>
    </sw-page>
{% endblock %}
