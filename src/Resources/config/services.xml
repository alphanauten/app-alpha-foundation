<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Alpha\Foundation\Core\Content\Product\ProductFeatureBuilder">
            <argument type="service" id="custom_field.repository"/>
            <argument type="service" id="Shopware\Core\System\Locale\LanguageLocaleCodeProvider"/>
        </service>

        <service id="Alpha\Foundation\Subscriber\ProductSubscriber">
            <argument type="service" id="sales_channel.product.repository"/>
            <argument type="service" id="product_feature_set.repository"/>
            <argument type="service" id="Alpha\Foundation\Core\Content\Product\ProductFeatureBuilder"/>

            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>
